<script>
    document.getElementById("submit").addEventListener("click",function (){
        let name= document.getElementById("name").value;
        let email= document.getElementById("email").value;
        let tuoi= document.querySelector("#tuoi").value;
        let doHaiLong= document.querySelector("#doHaiLong").value;
        let feedBack= document.getElementById("feedback").value;
        let message =
            "Họ tên: " + name + "\n" +
            "Email: " + email + "\n" +
            "Độ tuổi: " + tuoi + "\n" +
            "Mức độ hài lòng: " + doHaiLong + "\n" +
            "Phản hồi: " + feedBack;

        alert(message);
    });

</script>
